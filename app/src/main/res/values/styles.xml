    <style name="header_text_style">
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textFontWeight" tools:targetApi="p">1000</item>

    </style>

    <style name="header_text_style_light">
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textFontWeight" tools:targetApi="p">1000</item>

    </style>

    <style name="BottomNavigation.ActiveItemTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/roboto</item>
